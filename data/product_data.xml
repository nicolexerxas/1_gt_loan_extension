<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Categoria de Produto -->
        <record id="product_category_loan" model="product.category">
            <field name="name">Empréstimos</field>
        </record>
        
        <!-- Produto de Empréstimo Padrão -->
        <record id="product_loan_default" model="product.product">
            <field name="name">Empréstimo Pessoal</field>
            <field name="categ_id" ref="product_category_loan"/>
            <field name="type">service</field>
            <field name="list_price">0.0</field>
            <field name="standard_price">0.0</field>
            <field name="is_loan_product">True</field>
            <field name="loan_interest_rate">10.0</field>
            <field name="loan_interest_period">7</field>
            <field name="invoice_policy">order</field>
            <field name="service_type">manual</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="description_sale">Empréstimo pessoal com taxa de juros personalizada</field>
        </record>
        
        <!-- Job Agendado -->
        <record id="ir_cron_check_late_loans" model="ir.cron">
            <field name="name">Verificar Empréstimos Atrasados</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_late_loans()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.now().replace(hour=3, minute=0, second=0) + timedelta(days=1))"/>
        </record>
    </data>
</odoo>
