<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Adiciona campos de empréstimo no formulário de produto -->
        <record id="product_template_form_view_loan" model="ir.ui.view">
            <field name="name">product.template.form.loan</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Adiciona o campo is_loan_product -->
                <field name="sale_ok" position="after">
                    <field name="is_loan_product"/>
                </field>
                
                <!-- Adiciona página de configurações de empréstimo -->
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Configurações de Empréstimo" 
                        invisible="is_loan_product == False">
                        <group>
                            <group string="Taxas e Prazos">
                                <field name="loan_interest_rate"/>
                                <field name="loan_interest_period"/>
                            </group>
                            <group string="Informações">
                                <div class="alert alert-info" role="alert">
                                    <strong>Informação:</strong> Este produto será usado para criar empréstimos no módulo de Vendas.
                                    A taxa de juros será aplicada a cada período definido.
                                </div>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        
        <!-- Filtro para produtos de empréstimo -->
        <record id="product_template_search_view_loan" model="ir.ui.view">
            <field name="name">product.template.search.loan</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <filter name="filter_to_sell" position="after">
                    <separator/>
                    <filter string="Produtos de Empréstimo" 
                            name="loan_products" 
                            domain="[('is_loan_product', '=', True)]"/>
                </filter>
            </field>
        </record>
    </data>
</odoo>